      <p class="small">Masukkan kata sandi admin untuk mengedit halaman website.</p>
      <input id="pwd" class="input" type="password" placeholder="Kata sandi">
      <div style="display:flex;gap:8px;margin-top:12px">
        <button class="btn btn-primary" id="doLogin">Login</button>
        <button class="btn" id="cancelLogin">Batal</button>
      </div>
      <p class="small" style="margin-top:10px">* Kata sandi default: <strong>admin</strong></p>
    </div>
  </div>

  <script>
    // Simple admin login (client-side). Password is 'admin' as requested.
    const loginBtn = document.getElementById('loginBtn');
    const loginModal = document.getElementById('loginModal');
    const doLogin = document.getElementById('doLogin');
    const cancelLogin = document.getElementById('cancelLogin');
    const pwd = document.getElementById('pwd');
    const adminBar = document.getElementById('adminBar');
    const logoutBtn = document.getElementById('logoutBtn');
    const toggleEdit = document.getElementById('toggleEdit');
    let editing = false;

    loginBtn.addEventListener('click', ()=>{ loginModal.classList.remove('hidden'); pwd.value=''; pwd.focus(); });
    cancelLogin.addEventListener('click', ()=> loginModal.classList.add('hidden'));

    doLogin.addEventListener('click', ()=>{
      if(pwd.value === 'admin'){
        localStorage.setItem('sdt_admin','true');
        loginModal.classList.add('hidden');
        showAdminBar();
        alert('Login berhasil — mode edit tersedia');
      } else {
        alert('Kata sandi salah');
      }
    });

    function showAdminBar(){
      adminBar.classList.remove('hidden');
    }
    function hideAdminBar(){
      adminBar.classList.add('hidden');
    }
    if(localStorage.getItem('sdt_admin')==='true') showAdminBar();

    logoutBtn.addEventListener('click', ()=>{
      localStorage.removeItem('sdt_admin');
      hideAdminBar();
      disableEditing(true);
      alert('Anda telah logout');
    });

    toggleEdit.addEventListener('click', ()=>{
      editing = !editing; disableEditing(!editing);
      toggleEdit.textContent = editing ? 'Simpan Perubahan' : 'Aktifkan Edit';
    });

    function disableEditing(dis){
      const editableIds = ['beranda-desc','foto-sekolah','visi','misi','sejarah','struktur','kurikulum','unggulan','inovasi','news1-title','news1','news2-title','news2'];
      editableIds.forEach(id=>{
        const el = document.getElementById(id);
        if(!el) return;
        if(!dis && localStorage.getItem('sdt_admin')==='true'){
          el.contentEditable = true; el.classList.add('editable');
        } else {
          el.contentEditable = false; el.classList.remove('editable');
        }
      });
      // special for image
      const img = document.getElementById('foto-sekolah');
      if(!dis && localStorage.getItem('sdt_admin')==='true'){ img.style.outline='3px dashed rgba(47,181,115,0.18)'; img.addEventListener('click', changeMainPhoto); }
      else { img.style.outline=''; img.removeEventListener('click', changeMainPhoto); }
      // if saving (dis === true while editing was on), persist
      if(dis){ saveEdits(); }
    }

    function changeMainPhoto(){
      const url = prompt('Masukkan URL gambar baru untuk foto sekolah:');
      if(url) { document.getElementById('foto-sekolah').src = url; localStorage.setItem('sdt_foto', url); }
    }

    function saveEdits(){
      const ids = ['beranda-desc','visi','misi','sejarah','struktur','kurikulum','unggulan','inovasi','news1-title','news1','news2-title','news2'];
      ids.forEach(id=>{ const el = document.getElementById(id); if(el) localStorage.setItem('sdt_'+id, el.innerHTML);});
      // photo handled separately
      alert('Perubahan disimpan di browser (localStorage).');
    }

    // load saved edits from localStorage
    window.addEventListener('load', ()=>{
      const ids = ['beranda-desc','visi','misi','sejarah','struktur','kurikulum','unggulan','inovasi','news1-title','news1','news2-title','news2'];
      ids.forEach(id=>{ const key='sdt_'+id; if(localStorage.getItem(key)){ const el=document.getElementById(id); if(el) el.innerHTML = localStorage.getItem(key); }});
      if(localStorage.getItem('sdt_foto')) document.getElementById('foto-sekolah').src = localStorage.getItem('sdt_foto');
    });

    // Smooth scroll for nav links
    document.querySelectorAll('nav a[href^="#"]').forEach(a=>{
      a.addEventListener('click', (e)=>{
        e.preventDefault(); const target = document.querySelector(a.getAttribute('href')); if(target) target.scrollIntoView({behavior:'smooth',block:'start'});
      });
    });

    // small accessibility: keyboard shortcut L to open login
    document.addEventListener('keydown', (e)=>{ if(e.key.toLowerCase()==='l'){ loginModal.classList.remove('hidden'); pwd.focus(); } });
  </script>
</body>
